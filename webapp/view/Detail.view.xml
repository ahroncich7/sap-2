<mvc:View controllerName="destinationtest.destination2.controller.Detail" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m">

  <Page id="detail" title="{i18n>DetailTitle}" showNavButton="true" navButtonPress="handleNavButtonPress" >

      <VBox id="_IDGenVBox1">

          <Text id="_IDGenText1" text="{prod>ProductName}" />

          <Text id="_IDGenText2" text="{prod>UnitPrice}" />

          <Text id="_IDGenText3" text="{prod>QuantityPerUnit}" />

          <Text id="_IDGenText4" text="{prod>UnitsInStock}" />

      </VBox>

  </Page>

</mvc:View>